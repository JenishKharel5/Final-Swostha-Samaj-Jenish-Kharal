<%- include('./partials/header') %>
<% if (success && success.length > 0) { %>
  <div id="flash-message" class="fixed top-5 left-1/2 -translate-x-1/2 p-4 rounded-lg bg-green-500 text-white shadow-lg z-50 flex items-center">
    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
    <%= success %>
  </div>
<% } %>
<% if (error && error.length > 0) { %>
  <div id="flash-message" class="fixed top-5 left-1/2 -translate-x-1/2 p-4 rounded-lg bg-red-500 text-white shadow-lg z-50 flex items-center">
    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
    <%= error %>
  </div>
<% } %>

<!-- Main Content for Vaccine Ticket Page -->
<div
  class="min-h-screen bg-gray-100 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8"
>
  <div class="max-w-md w-full space-y-8">
    <div class="bg-white shadow-md rounded-lg p-6 relative print-area">
      <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-800">Program Booking Ticket</h1>
        <!-- Print Button -->
        <button
          class="p-2 rounded-full bg-blue-500 hover:bg-blue-600 text-white shadow-md print-btn"
        >
          <i class="fas fa-print text-lg"></i>
        </button>
      </div>

      <!-- Ticket Details -->
      <div class="space-y-4">
        <h2 class="text-xl font-bold text-gray-800">
          Ticket ID: <%= booking.ticketId %>
        </h2>
        <p class="text-sm text-gray-600">
          <strong>Name:</strong> <%= booking.display_name %>
        </p>
        <p class="text-sm text-gray-600">
          <strong>Email:</strong> <%= booking.display_email %>
        </p>
        <p class="text-sm text-gray-600">
          <strong>Phone:</strong> <%= booking.display_phone %>
        </p>
        <p class="text-sm text-gray-600">
          <strong>Program:</strong> <%= booking.vaccine_name %>
        </p>
        <p class="text-sm text-gray-600">
          <strong>Hospital:</strong> <%= booking.vaccine_hospital %>
        </p>
        <p class="text-sm text-gray-600">
          <strong>Booking Date:</strong> <%= new Date(booking.bookingDate).toLocaleString() %>
        </p>
        <p class="text-sm text-gray-600">
          <strong>Status:</strong> <%= booking.status %>
        </p>
      </div>
    </div>
    <div class="text-center mt-6">
      <button onclick="window.print()" class="px-6 py-3 bg-blue-600 text-white rounded-lg font-semibold shadow hover:bg-blue-700 transition">Print Ticket</button>
    </div>
  </div>
</div>

<script src="/scripts/print-ticket.js"></script>

<%- include('./partials/footer') %>
