<%- include('../partials/header') %>

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-50 to-blue-100 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-lg w-full bg-white/80 backdrop-blur-lg p-10 rounded-2xl shadow-xl">
    <h1 class="text-3xl font-bold text-gray-800 mb-8 text-center">Add New Program</h1>
    <form action="/staff/add-vaccine" method="POST" enctype="multipart/form-data" class="space-y-6">
      <!-- Program Name -->
      <div>
        <label for="name" class="block text-sm font-semibold text-gray-800 mb-2">Program Name</label>
        <input type="text" name="name" id="name" placeholder="Enter program name" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
      </div>
      <!-- Description -->
      <div>
        <label for="description" class="block text-sm font-semibold text-gray-800 mb-2">Description</label>
        <textarea name="description" id="description" placeholder="Enter description" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>
      </div>
      <!-- Available Slots -->
      <div>
        <label for="availableSlots" class="block text-sm font-semibold text-gray-800 mb-2">Available Slots</label>
        <input type="number" name="availableSlots" id="availableSlots" placeholder="Enter available slots" min="1" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
      </div>
      <!-- Hospital Name -->
      <div>
        <label for="hospital" class="block text-sm font-semibold text-gray-800 mb-2">Hospital Name</label>
        <input type="text" name="hospital" id="hospital" placeholder="Enter hospital name" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
      </div>
      <!-- Image Upload -->
      <div>
        <label for="image" class="block text-sm font-semibold text-gray-800 mb-2">Upload Program Photo</label>
        <input type="file" name="image" id="image" accept="image/*" class="w-full px-4 py-3 border-2 border-blue-400 bg-blue-50 rounded focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition" />
      </div>
      <button type="submit" class="w-full py-3 px-4 text-lg font-semibold rounded-lg text-white bg-gradient-to-r from-blue-500 to-indigo-600 shadow-md hover:scale-105 transition-all duration-300 hover:shadow-lg">Add Program</button>
    </form>
  </div>
</div>

<%- include('../partials/footer') %> 